<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ssafy.attraction.model.mapper.AttractionMapper">

	<resultMap type="MyTripDto" id="trip">
		<result column="content_id" property="content_id"/>
		<result column="user_id" property="user_id"/>
	</resultMap>

	<insert id="addAttraction" parameterType="MyTripDto">
		insert into mytrip (content_id, user_id)
		values (#{content_id}, #{user_id})
	</insert>


	<select id="getMyAttractions" parameterType="String" resultType="String">
		select content_id from mytrip where user_id = #{user_id}
	</select>
	

</mapper>